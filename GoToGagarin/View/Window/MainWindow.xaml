<Window x:Class="GoToGagarin.View.Window.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:GoToGagarin.View.Controls"
        xmlns:window="clr-namespace:GoToGagarin.ViewModel.Window"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        d:DataContext="{d:DesignInstance window:MainWindowViewModel}"
        Title="MainWindow">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction
                Command="{Binding LoadedCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Viewbox>
        <Grid Width="1080" Height="1920">
            <controls:ObjectControl DataContext="{Binding InfoViewModel}" Visibility="Visible" />
            <controls:SearchControl VerticalAlignment="Bottom" DataContext="{Binding SearchViewModel}" Visibility="Hidden" />
            <controls:NavigationControl Height="420" VerticalAlignment="Bottom"
                                        DataContext="{Binding NavigationViewModel}" Visibility="Hidden" />
            <Button
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Panel.ZIndex="3000"
                Width="100"
                Height="100">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="PreviewMouseDown">
                        <b:InvokeCommandAction Command="{Binding StartTimerCommand}" />
                    </b:EventTrigger>
                    <b:EventTrigger EventName="PreviewMouseUp">
                        <b:InvokeCommandAction Command="{Binding StopTimerCommand}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
                <Button.Style>
                    <Style TargetType="Button">
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate>
                        <Border Width="240" Height="240" Background="Transparent">
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Viewbox>
</Window>