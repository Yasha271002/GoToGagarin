<UserControl x:Class="GoToGagarin.View.Controls.ObjectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:GoToGagarin.View.Controls"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:ObjectInfoControl}">
    <Grid Width="1080" Height="1920" Background="Green"
            x:Name="MainCanvas">
        <Border Width="1080"
                VerticalAlignment="Bottom"
                x:Name="MainBorder"
                Height="298"
                CornerRadius="32 32 0 0"
                Background="{StaticResource BackgroundControl}">
            <Grid>
                <Button Template="{StaticResource GrabButtonTemplate}"
                    Width="248" Height="6" Margin="0 8 0 0"
                    VerticalAlignment="Top">
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="MouseDown">
                            <b:InvokeCommandAction
                            Command="{Binding IsDraggingCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}"
                            PassEventArgsToCommand="True" />
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                </Button>
                <local:ObjectInfoControl Margin="0 32 0 0" Width="952" DataContext="{Binding }" />
            </Grid>
        </Border>
    </Grid>
</UserControl>