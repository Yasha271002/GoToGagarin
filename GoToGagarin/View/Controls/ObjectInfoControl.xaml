<UserControl x:Class="GoToGagarin.View.Controls.ObjectInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:GoToGagarin.ViewModel.Controls"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance controls:ObjectInfoViewModel}">

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction
                Command="{Binding LoadedCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="*" />
            <RowDefinition Height="120" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center"
                    Margin="0 46 0 0" VerticalAlignment="Center">
            <ContentPresenter ContentTemplate="{StaticResource MuseumIcon}" Width="64" Height="64" />
            <TextBlock Text="{Binding MapVM.SelectObject.Title}"
                       Style="{StaticResource ObjectNameTextStyle}"
                       FontWeight="Bold" Margin="24 0" HorizontalAlignment="Center"
                       TextAlignment="Center"  Width="700" VerticalAlignment="Center"
                       FontSize="40" Foreground="{StaticResource ObjectNameForeground}" />
            <Button Template="{StaticResource ContentPresenterButtonTemplate}"
                    ContentTemplate="{DynamicResource CloseIcon}"
                    Width="40" Height="40" />
        </StackPanel>
        <TabControl Grid.Row="1" Margin="0 32 0 0">
            <TabItem Header="Описание">
                <Grid>
                    <Border Padding="16 24 16 16"
                            CornerRadius="16" VerticalAlignment="Top"
                            Background="{StaticResource DescriptionBackground}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource ObjectNameTextStyle}"
                                   FontSize="34" FontWeight="Bold" Text="{Binding MapVM.SelectObject.Title}"
                                   Foreground="{StaticResource ObjectNameForeground}"  Margin="0 0 0 24" />
                            <TextBlock Style="{StaticResource ObjectNameTextStyle}"
                                   FontSize="20" FontWeight="Normal" Text="{Binding MapVM.SelectObject.Description}"
                                   Foreground="{StaticResource DescriptionForeGround}" TextAlignment="Justify" />
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="Фото">
                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                    <ItemsControl ItemsSource="{Binding MapVM.SelectObject.Images}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Margin="0 32 0 0 " />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Width="472" Height="466" Margin="2">
                                    <Border CornerRadius="16 " Height="466">
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding Image}" Stretch="UniformToFill" />
                                        </Border.Background>
                                        <Border CornerRadius="0 0 16 16" Height="60" VerticalAlignment="Bottom">
                                            <Border.Background>
                                                <SolidColorBrush Color="#3F92B2" Opacity="0.4" />
                                            </Border.Background>
                                            <TextBlock Style="{StaticResource ObjectNameTextStyle}"
                                                       Text="{Binding Title}"
                                                       FontSize="16" FontWeight="Medium" Foreground="White" />
                                        </Border>
                                    </Border>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        <Button Grid.Row="2" Margin="64 32 64 32"
                VerticalAlignment="Bottom"
                Template="{StaticResource BuildRoute}" />
    </Grid>
</UserControl>